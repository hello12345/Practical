@model Practical.Models.Calculation
@{
    ViewData["Title"] = "Home Page";
    Layout = "/Views/Shared/_Layout.cshtml";
}

    <form method="post">
        <div class="form-group">
            <label asp-for="value1">Value1</label>
            <input asp-for="value1" class="form-control" />
            <span asp-validation-for="value1" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="value2">Value2</label>
            <input asp-for="value2" class="form-control" />
            <span asp-validation-for="value2" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CalculationType">Calculation Type</label>
            <select class="form-control" asp-for="CalculationType" asp-items="ViewBag.CalculationType"></select>
            <span asp-validation-for="CalculationType" class="text-danger"></span>
        </div>
        <div class="form-group">
            @if (ViewBag.result != null)
            {
             
                <div class="form-group">
                    <div class="alert-success form-control">
                        <div>
                           Result : @ViewBag.result
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="form-group">
            <input type="submit" value="Calculate" class="btn btn-primary" />
        </div>
        <div class="form-group">
            <div class="alert-info form-control">
                <div>
                    Note :
                    Method 1 : P(A)P(B)
                    Method 2 : P(A) + P(B) - (P(A)*P(B))
                </div>
            </div>
        </div>
    </form>